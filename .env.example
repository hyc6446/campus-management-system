# 应用配置
APP_ENV=development
APP_PORT=3000
APP_HOST=127.0.0.1
APP_PREFIX=api/v1
APP_NAME="Campus Management System"
APP_VERSION=1.0.0

# 数据库配置
DATABASE_URL="postgresql://postgres:123456@campus-postgres:5432/campus_db?schema=public"

# MinIO配置
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=access_key
MINIO_SECRET_KEY=secret_key
MINIO_BUCKET_NAME=campus-files
MINIO_USE_SSL=false

# JWT配置
JWT_SECRET=your_strong_secret_here
JWT_EXPIRATION=3600

# 日志配置
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# Swagger配置
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs